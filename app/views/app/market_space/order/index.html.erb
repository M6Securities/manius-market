<!-- displays a datatable of orders -->

<% content_for :title, 'Orders' %>

<div class="content-header d-flex mb-1 justify-content-between">
  <h1 class="m-0" style="line-height: 39px;">
    Orders
  </h1>
</div>
<div class="content-body">

  <section id="products-index">

    <div class="card">
      <div class="card-content">
        <div class="card-body">

          <table id="orders-table" class="table table-striped" style="width:100%"
                 data-controller="app--market-space--order--index"
                 data-app--market-space--order--index-url-value="<%= app_market_space_order_datatable_path %>"
                 data-app--market-space--order--index-item-path-value="<%= app_market_space_order_index_path %>"
          >
            <thead>
              <tr>
                <th>Date</th>
                <th>Num of Products</th>
                <th>Payment Status</th>
                <th>Order Status</th>
                <th>Total Price</th>
                <th>View</th>
              </tr>
            </thead>

            <tbody class="table-striped"></tbody>

            <tfoot>
              <tr>
                <th>Date</th>
                <th>Num of Products</th>
                <th>Payment Status</th>
                <th>Order Status</th>
                <th>Total Price</th>
                <th>View</th>
              </tr>
            </tfoot>
          </table>

        </div>
      </div>
    </div>

  </section>

</div>