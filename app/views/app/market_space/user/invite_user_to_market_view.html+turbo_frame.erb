<%= turbo_frame_tag :invite_user do %>
  <div class="card">
    <div class="card-body">

      <%= render FormFlashComponent.new %>

      <div>
        <%= render(FormErrorComponent.new(@permission.errors.messages)) unless @permission.nil? %>
      </div>

      <form action="<%= app_market_space_invite_user_to_market_path %>" method="post">
        <div class="d-flex justify-content-between">
          <%= render InputBlockComponent.new(title: "Invite User to Market", name: 'invite[email]', type: :email, value: @email, placeholder: 'john.smith@example.com', div_classes: "me-2 w-100"), cached: true %>
          <div class="d-flex flex-column justify-content-end">
            <button type="submit" class="btn btn-outline-success mb-0">Invite</button>
          </div>
        </div>
      </form>
    </div>
  </div>
<% end %>

