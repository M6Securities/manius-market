<!-- displays a datatable of products -->

<% content_for :title, 'Receiving' %>

<div class="content-header d-flex mb-1 justify-content-between">
  <h1 class="m-0" style="line-height: 39px;">
    Receiving
  </h1>

  <a href="<%= new_app_market_space_receiving_path %>" class="btn btn-success">
    <i data-feather="plus"></i> Receive New Stock
  </a>
</div>
<div class="content-body">

  <section id="products-index">

    <div class="card">
      <div class="card-content">
        <div class="card-body">

          <table id="products-table" class="table table-striped" style="width:100%"
                 data-controller="app--market-space--receiving--index"
                 data-app--market-space--receiving--index-url-value="<%= app_market_space_receiving_datatable_path %>"
                 data-app--market-space--receiving--index-item-path-value="<%= app_market_space_receiving_index_path %>"
          >
            <thead>
              <tr>
                <th>Date</th>
                <th>User</th>
                <th>View</th>
              </tr>
            </thead>

            <tbody class="table-striped"></tbody>

            <tfoot>
              <tr>
                <th>Date</th>
                <th>User</th>
                <th>View</th>
              </tr>
            </tfoot>
          </table>

        </div>
      </div>
    </div>

  </section>

</div>