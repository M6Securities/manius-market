<%= turbo_frame_tag @product do %>
  <form id="edit_product<%= @product.id %>" action="<%= app_product_path %>"  method="patch">
    <div class="d-flex justify-content-between">
      <div>
        <h1>
          <%= @product.name %>
        </h1>
        <p class="text-muted">
          <%= @product.sku %>
        </p>
      </div>

      <div class="d-flex">

        <a href="<%= app_product_path @product %>" class="btn btn-outline-danger mx-1" style="height: 39px;">
          <i data-feather="x"></i>
          Cancel
        </a>

        <button type="submit" class="btn btn-success ms-1" style="height: 39px;">
          <i data-feather="save"></i>
          <%= t('global.wording.save') %>
        </button>
      </div>
    </div>

    <div>
      <%= render(FormErrorComponent.new(@product.errors.messages)) %>
    </div>

    <div class="card">

      <div class="card-body">

        <h4 class="card-title">
          <%= t('global.wording.edit') %>
        </h4>

        <div class="row">

          <div class="col-12 col-xl-3 col-lg-4 col-md-6 col-sm-12">
            <%= render InputBlockComponent.new(id: 'product-display-name', name: 'update[name]', title: 'Name', placeholder: @product.name, value: @product.name, required: true) %>
          </div>

          <div class="col-12 col-xl-3 col-lg-4 col-md-6 col-sm-12">
            <%= render InputBlockComponent.new(id: 'product-sku', name: 'update[sku]', title: 'SKU', placeholder: @product.sku, value: @product.sku, required: true) %>
          </div>

          <div class="col-12 col-xl-3 col-lg-4 col-md-6 col-sm-12">
            <%= render InputBlockComponent.new(id: 'product-price', name: 'update[price]', title: 'Price', placeholder: @product.price, value: @product.price, required: true) %>
          </div>

          <div class="col-12 col-xl-3 col-lg-4 col-md-6 col-sm-12">
            <%= render InputBlockComponent.new(id: 'product-stock', name: 'update[stock]', title: 'Stock', placeholder: @product.stock, value: @product.stock, required: true) %>
          </div>

          <div class="col-12 col-xl-3 col-lg-4 col-md-6 col-sm-12">
            <%= render InputBlockComponent.new(id: 'product-tax-code', title: 'Tax Code', placeholder: t('global.wording.tax_code'), value: @product.tax_code, required: false) %>
          </div>

        </div>

      </div>

    </div>
  </form>




<% end %>