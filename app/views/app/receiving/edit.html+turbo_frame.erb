<%= turbo_frame_tag @receiving do %>
  <form action="<%= app_receiving_path @receiving %>" method="patch">
    <!-- rails authenticity token -->
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <div class="d-flex justify-content-between">
      <div>
        <h1>Edit Receiving</h1>
        <p class="text-muted">
          <%= @receiving.id %>
        </p>
      </div>

      <div class="d-flex justify-content-end">

        <a href="<%= app_receiving_path @receiving %>" class="btn btn-outline-danger mx-1" style="height: 39px;">
          <i data-feather="x"></i>
          Cancel
        </a>

        <button type="submit" class="btn btn-success ms-1" style="height: 39px;">
          <i data-feather="save"></i>
          <%= t('global.wording.save') %>
        </button>
      </div>
    </div>

    <%= render FormFlashComponent.new %>

    <div class="card">
      <div class="card-body">

        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
            <tr>
              <th>
                Product
              </th>
              <th>
                Quantity
              </th>
              <th>
                Actions
              </th>
            </tr>
            </thead>

            <tbody>
              <% @receiving.receive_items.each do |item| %>
                <% cache item do %>
                  <tr>
                    <td>
                      <span>
                        <%= item.product.name %> - <span class="text-muted"><%= item.product.sku %></span> <a href="<%= app_product_path item.product %>"><i data-feather='external-link'></i></a>
                      </span>
                      <input type="hidden" name="update[items][][id]" value="<%= item.id %>">
                    </td>
                    <td>
                      <%= render InputBlockComponent.new(name: 'update[items][][quantity]', value: item.quantity, type: :number, div_classes: '') %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="d-flex justify-content-end mt-1">

          <%= render InputBlockComponent.new(name: 'new[sku]', placeholder: 'Receive Item SKU', div_classes: 'me-1', required: false), cached: true %>

          <button type="submit" class="btn btn-outline-success">
            <i data-feather="plus"></i> Add Receiving Line
          </button>
        </div>

      </div>
    </div>
  </form>

  <script defer>

  </script>

<% end %>