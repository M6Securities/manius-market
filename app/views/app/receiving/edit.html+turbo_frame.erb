<%= turbo_frame_tag @receiving do %>
  <form action="<%= app_receiving_path @receiving %>" method="patch">
    <!-- rails authenticity token -->
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <div class="d-flex justify-content-between">
      <div>
        <h1>Edit Receiving</h1>
        <p class="text-muted">
          <%= @receiving.id %>
        </p>
      </div>

      <div class="d-flex justify-content-end">

        <a href="<%= app_receiving_path @receiving %>" class="btn btn-outline-danger mx-1" style="height: 39px;">
          <i data-feather="x"></i>
          Cancel
        </a>

        <button type="submit" class="btn btn-success ms-1" style="height: 39px;">
          <i data-feather="save"></i>
          <%= t('global.wording.save') %>
        </button>
      </div>
    </div>

    <div class="card">
      <div class="card-body">

        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
            <tr>
              <th>
                Product
              </th>
              <th>
                Quantity
              </th>
            </tr>
            </thead>

            <tbody>
            <% @receiving.receive_items.each do |item| %>
              <tr>
                <td>
                  <%= item.product.name %>
                </td>
                <td>
                  <%= item.quantity %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>

        <div class="d-flex justify-content-end mt-1">
          <button type="button" class="btn btn-outline-success">
            <i data-feather="plus"></i> Add Receiving Line
          </button>
        </div>

      </div>
    </div>
  </form>

  <script defer>

  </script>

<% end %>