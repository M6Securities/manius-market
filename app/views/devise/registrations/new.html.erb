<% content_for :title, t('global.wording.sign_up') %>

<div class="d-flex mb-1">
  <h2 class="card-title font-weight-bold mr-2 mb-0"><%= t 'global.wording.sign_up' %></h2>

</div>

<%= render DeviseFlashComponent.new %>

<form class="new_user" id="new_user" action="<%= user_registration_path %>" accept-charset="UTF-8" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= render InputBlockComponent.new(title: t('global.wording.email'), name: 'user[email]', id: 'user_email', autocomplete: 'email', autofocus: true, type: 'email', placeholder: t('global.wording.email')) %>

  <%= render InputBlockComponent.new(title: t('global.wording.display_name'), name: 'user[display_name]', id: 'user_display_name', autocomplete: 'name', type: 'text', placeholder: t('global.wording.display_name')) %>

  <%= render InputBlockComponent.new(title: t('global.wording.password'), name: 'user[password]', id: 'user_password', autocomplete: 'new-password', type: 'password', placeholder: '············') %>

  <%= render InputBlockComponent.new(title: t('global.wording.password_confirmation'), name: 'user[password_confirmation]', id: 'user_password_confirmation', autocomplete: 'new-password', type: 'password', placeholder: '············') %>

  <div class="actions">
    <button type="submit" class="btn btn-primary my-1 w-100" name="commit" data-disable-with="Sign up"><%= t 'global.wording.create_account' %></button>
  </div>
</form>

<div class="row mt-2">
  <div class="col-12 col-md-4">
    <a href="<%= new_user_session_path %>" class="btn btn-outline-primary w-100">
      <%= t 'global.wording.login' %>
    </a>
  </div>

  <div class="col-12 col-md-4">
    <a href="<%= new_user_password_path %>" class="btn btn-outline-primary w-100">
      <%= t 'global.wording.forgot_password_question' %>
    </a>
  </div>

  <div class="col-12 col-md-4">
    <a href="<%= new_user_unlock_path %>" class="btn btn-outline-primary w-100">
      <%= t 'global.wording.unlock_account_question' %>
    </a>
  </div>
</div>
