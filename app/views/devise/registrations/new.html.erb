<% content_for :title, t('global.wording.sign_up') %>

<div class="d-flex mb-1">
  <h2 class="card-title font-weight-bold mr-2 mb-0"><%= t 'global.wording.sign_up' %></h2>

  <div class="mx-1">
    <a href="<%= new_user_session_path %>" class="btn btn-sm btn-outline-primary">
      <i data-feather="arrow-left"></i> <%= t 'global.wording.back' %>
    </a>
  </div>

</div>

<% unless flash.alert.blank? %>
  <div class="alert alert-warning w-100 m-0 text-center my-1" role="alert">
    <div class="alert-body">
      <%= flash.alert %>
    </div>
  </div>
<% end %>

<% unless flash.notice.blank? %>
  <div class="alert alert-warning w-100 m-0 text-center my-1" role="alert">
    <div class="alert-body">
      <%= flash.notice %>
    </div>
  </div>
<% end %>

<form class="new_user" id="new_user" action="<%= user_registration_path %>" accept-charset="UTF-8" method="post"><input type="hidden" name="authenticity_token" value="6g32Rdg_XpoAjY1kCRay_aQLxJkZi9jv64ftSyFX-5f6DkYuYPTV9I8gBmwb30Jqd-VSCaLMFI3Hm-FGm5hdHQ">


  <div class="form-group">
    <label class="form-label" for="user_email"><%= t 'global.wording.email' %></label>
    <input class="form-control" id="user_email" type="email" name="user[email]" placeholder="john.smith@example.com"autocomplete="email" aria-describedby="user_email" autofocus="" tabindex="1">
  </div>

  <div class="form-group">
    <label class="form-label" for="user_display_name"><%= t 'global.wording.display_name' %></label>
    <input class="form-control" id="user_display_name" type="text" name="user[display_name]" placeholder="John Smith" autocomplete="name" aria-describedby="user_display_name" autofocus="" tabindex="1">
  </div>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <div class="form-group">
    <label class="form-label" for="user_password"><%= t 'global.wording.password' %></label>
    <input class="form-control form-control-merge" id="user_password" type="password" autocomplete="new-password" name="user[password]" placeholder="············" aria-describedby="login-password" tabindex="2">
  </div>

  <div class="form-group">
    <label class="form-label" for="user_password_confirmation"><%= t 'global.wording.password_confirmation' %></label>
